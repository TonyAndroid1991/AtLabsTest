<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/static_name_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/user_image"
                android:text="Name: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/static_name_string"
                android:text="My name is..."
                android:textSize="20sp" />


            <TextView
                android:id="@+id/biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/static_name_string"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/user_image"
                android:text="Biography: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/biography"
                android:text="My biography is..."
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>